{% comment %} mobile-view {% endcomment %}
<footer class="bg-[#445442] text-[#F6F0E4] flex flex-col gap-16 py-16 px-6 md:hidden">
    <div>{% render 'logo-milk-footer' %}</div>
    <div class="flex flex-col gap-8">
        <div class="flex flex-row gap-10">
            <div class="flex flex-col gap-4 w-[106px]">
                <h1 class="text-xl font-medium font-causten leading-6">SHOP</h1>
                {% for link in linklists['footer-shop'].links %}
                    <a
                        href='{{ link.url }}'
                        class='text-lg font-semibold leading-6'>
                        {{ link.title }}
                    </a>
                {% endfor %}
            </div>
            <div class="flex flex-col gap-4">
                <h1 class="text-xl font-medium font-causten leading-6">USERS</h1>
                {% for link in linklists['footer-users'].links %}
					<a
						href='{{ link.url }}'
						class='text-lg font-semibold leading-6'>
						{{ link.title }}
					</a>
				{% endfor %}
            </div>
        </div>
        <div class="flex flex-row gap-10">
            <div class="flex flex-col gap-4 w-[106px]">
                <h1 class="text-xl font-medium font-causten leading-6">COMPANY</h1>
                {% for link in linklists['footer-company'].links %}
					<a
						href='{{ link.url }}'
						class='text-lg font-semibold leading-6'>
						{{ link.title }}
					</a>
				{% endfor %}

				{% assign terms = linklists.footer.links.first %}
				<a
					href='{{ terms.url }}'
					class='text-lg font-semibold leading-6'>
					{{ terms.title }}
				</a>
            </div>
            <div class="flex flex-col gap-4 justify-end">
                {% for link in linklists.footer.links %}
					{% if link.title != 'Terms' %}
						<a
							href='{{ link.url }}'
							class='text-lg font-semibold leading-6'>
							{{ link.title }}
						</a>
					{% endif %}
				{% endfor %}

				<a
					href=''
					class='text-2xl font-semibold leading-6 '>
					<i class="fa-brands fa-instagram"></i>
				</a>
            </div>
        </div>
        <div class="bg-[#F6F0E4] h-[1px] w-full"></div>
        <div class="font-semibold leading-5">
            © 2024 Milk DENMARK.<br>
            All rights reserved.
        </div>
    </div>
</footer>

